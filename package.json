{
  "name": "lombabcf-frontend",
  "version": "1.0.0",
  "description": "Frontend assets for LombaBCF website",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass assets/scss/main.scss:assets/css/main.css --style compressed",
    "build:js": "webpack --mode production",
    "dev": "npm run dev:css & npm run dev:js",
    "dev:css": "sass assets/scss/main.scss:assets/css/main.css --watch",
    "dev:js": "webpack --mode development --watch",
    "lint": "eslint assets/js/",
    "lint:fix": "eslint assets/js/ --fix",
    "test": "jest",
    "clean": "rm -rf assets/css/* assets/js/dist/*"
  },
  "keywords": [
    "lomba",
    "pendaftaran",
    "pembayaran",
    "smp",
    "bootstrap",
    "php"
  ],
  "author": "LombaBCF Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "sass": "^1.62.0",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.0",
    "animate.css": "^4.1.1",
    "@fortawesome/fontawesome-free": "^6.4.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
